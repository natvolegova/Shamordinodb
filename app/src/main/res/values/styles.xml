<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/textMainColor</item>
    </style>

    <style name="cardMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="cardContent">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="icoCard">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/textTitleColor</item>
        <item name="android:fontFamily">@font/ptseriftegular</item>
    </style>
    <style name="Heading1" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/textTitleColor</item>
        <item name="android:fontFamily">@font/ptseriftegular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="Title.cardItemList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Title.cardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ico_cross">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_below">@id/mainBackground</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Heading1.Detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
